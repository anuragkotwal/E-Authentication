<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Face Register</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link rel="stylesheet" href="/CSS/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </head>
  <body>
    <section class="vh-100">
      <div class="container h-100vh">
        <div
          class="row d-flex justify-content-center align-items-center h-100vh"
        >
          <div class="col-lg-12 col-xl-11 m-1">
            <div class="card text-black" style="border-radius: 30px">
              <div class="card-body">
                <form method="POST" action="/faceauth">
                  <p class="text-center h4 fw-bold text-white">
                    Face Registration
                  </p>
                  <% if(message) { %>
                  <script>
                    const isRegistered = "<%- message.isRegistered %>";
                    console.log(isRegistered);
                    if (isRegistered == "true") {
                      M.toast(
                        {
                          html: "<strong style='color: #<%- message.color %>'><%- message.intro %></strong>&nbsp;<%- message.message %>",
                          completeCallback: function () {
                            window.location.href = "/";
                          }
                        },
                        3000
                      );
                    } else {
                      M.toast(
                        {
                          html: "<strong style='color: #<%- message.color %>'><%- message.intro %></strong>&nbsp;<%- message.message %>",
                        },
                        3000
                      );
                    }
                  </script>
                  <% } %>
                  <div class="d-flex justify-content-center">
                    <video id="video" height="300" width="300" autoplay></video>
                  </div>
                  <div class="d-flex justify-content-center">
                    <div class="form-item">
                      <button
                        type="button"
                        class="btn btn-primary m-2"
                        id="start-camera"
                      >
                        Start Camera
                      </button>
                      </div>
                      <div class="form-item">
                      <button
                        type="button"
                        style="display: none"
                        class="btn btn-primary m-2"
                        id="click-photo"
                      >
                        Click Photo
                      </button>
                      </div>
                      <div class="form-item">
                      <button
                        style="display: none"
                        type="submit"
                        class="btn btn-primary m-2"
                        id="save"
                      >
                        Save
                      </button>
                      </div>
                    </div>
                  </div>
                  <div class="d-flex justify-content-center m-3 mx-2">
                    <canvas
                      id="canvas"
                      width="300"
                      height="240"
                      name="imageUrl"
                    ></canvas>
                  </div>
                  <input
                    type="text"
                    style="display: none"
                    id="imgurl"
                    name="imageUrl"
                    value=""
                  />
                  <script type="module" src="js/faceauth.js"></script>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
