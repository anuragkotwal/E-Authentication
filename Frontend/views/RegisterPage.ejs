<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/CSS/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
  </head>
  <body>
    <section class="vh-100">
      <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="card text-black m-4" style="border-radius: 30px">
            <div class="card-body">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                  <p
                    class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4 text-white"
                  >
                    Sign up
                  </p>
                  <form class="mx-1 mx-md-4" action="/register" method="POST">
                    <% if(message) { %>
                    <script>
                      M.toast(
                        {
                          html: "<strong style='color: #<%- message.color %>'><%- message.intro %>.</strong>&nbsp;<%- message.message %>",
                        },
                        3000
                      );
                    </script>
                    <% } %>
                    <div class="d-flex flex-row align-items-center mb-3">
                      <i class="fa fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <div class="form-field">
                          <input
                            type="text"
                            id="fname"
                            name="fname"
                            class="form-control"
                            placeholder="First Name"
                            onblur="checkFname()"
                            required
                          />
                        </div>
                      </div>
                    </div>

                    <script>
                      function checkFname() {
                        const fname = document.getElementById("fname").value;
                        const regexForname = /^[a-zA-Z][0-9a-zA-Z.,'-]*$/g;
                        if (fname === "") {
                          M.toast(
                            {
                              html: "<strong style='color: #c23934'>Please enter first name</strong>",
                            },
                            3000
                          );
                        } else if (!fname.match(regexForname)) {
                          M.toast(
                            {
                              html: "<strong style='color: #c23934'>Please enter the first name correctly</strong>",
                            },
                            3000
                          );
                        }
                      }

                      function checkLname() {
                        const lname = document.getElementById("lname").value;
                        const regexForname = /^[a-zA-Z][0-9a-zA-Z.,'-]*$/g;
                        if (lname === "") {
                          M.toast(
                            {
                              html: "<strong style='color: #c23934'>Please enter last name</strong>",
                            },
                            3000
                          );
                        } else if (
                          !lname.match(regexForname) &&
                          lname !== "."
                        ) {
                          M.toast(
                            {
                              html: "<strong style='color: #c23934'>Please Enter the last name correctly</strong>",
                            },
                            3000
                          );
                        }
                      }
                    </script>

                    <div class="d-flex flex-row align-items-center mb-1">
                      <i class="fa fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <div class="form-field">
                          <input
                            type="text"
                            id="lname"
                            name="lname"
                            class="form-control"
                            placeholder="Last Name"
                            onblur="checkLname()"
                          />
                          <small
                            >Please enter .(dot) in case last name is not
                            available</small
                          >
                        </div>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-3">
                      <i class="fa fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <div class="form-field">
                          <input
                            type="email"
                            id="email"
                            name="email"
                            class="form-control validate"
                            placeholder="Your Email"
                            required
                          />
                          <span
                            class="helper-text"
                            data-error="Enter a valid email"
                            data-success="Valid email"
                          ></span>
                        </div>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-3">
                      <i class="fa fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <div class="form-field">
                          <input
                            type="password"
                            id="password"
                            name="password"
                            class="form-control"
                            placeholder="Password"
                            required
                          />
                        </div>
                      </div>
                    </div>

                    <div
                      class="d-flex justify-content-center mx-4 mb-3 mb-lg-3"
                    >
                      <div class="form-item">
                        <button
                          type="submit"
                          class="waves-effect waves-light btn"
                          id="submit"
                        >
                          Next
                          <i class="material-icons right">send</i>
                        </button>
                      </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                      <label class="form-check-label text-white" for="">
                        Already Registered ?
                        <a href="/">Login</a>
                      </label>
                    </div>
                  </form>
                </div>
                <div class="col-xl-7 d-flex align-items-center mb-4">
                  <img
                    src="/svg/log-in-girl.svg"
                    alt="Sample image"
                    width="80%"
                    height="80%"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
